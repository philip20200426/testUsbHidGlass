<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden"
    tools:context=".USBHIDTerminal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSelectHIDDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnHandShake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shake"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnStartImu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="StartIMU"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnStopImu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="StopIMU"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn2D"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2D"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btn3D"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3D"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnAcc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acc Cal"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnGyr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gyr Cal"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnMag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mag Cal"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P-Sensor Cal"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnASensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A-Sensor Cal"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:id="@+id/btnOled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oled"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/edtOled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0-190"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Bright"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/Oled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Oled"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/PSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="PSensor"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/TEMP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TEMP"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/Custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Custom"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Gyr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Gyr"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/GyrX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="GyrX"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/GyrY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="GyrY"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/GyrZ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="GyrZ"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mÂ°/s"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Acc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Acc"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/AccX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AccX"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/AccY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AccY"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/AccZ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AccZ"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m/s^2"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Mag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mag"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/MagX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MagX"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/MagY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MagY"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/MagZ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MagZ"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/MagR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MagR"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uT"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/GTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="GTime"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/ATime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ATime"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/MTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MTime"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />

        <EditText
            android:id="@+id/Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Date"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtlogText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="false"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceSmallInverse" />
    </ScrollView>

</LinearLayout>